include_directories(\$\{Protobuf_INCLUDE_DIRS\})
protobuf_generate_cpp(PROTO_SRCS PROTO_HDRS ${1: proto文件})
protobuf_generate_python(PROTO_PY ${1: proto文件})
add_library(recordMsg STATIC \$\{PROTO_SRCS\} \$\{PROTO_HDRS\})
endsnippet


